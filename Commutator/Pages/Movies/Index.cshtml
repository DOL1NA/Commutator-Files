                @Html.DisplayNameFor(model => model.Movie[0].Invn)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].BuyDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].UstDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movie[0].Atug)
            </th>
